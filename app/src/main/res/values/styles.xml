<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="chipStyle">@style/TagChip</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="AppThemeDark" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="colorError">@color/colorError</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="TagChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="chipBackgroundColor">@color/primaryLightColor</item>
        <item name="closeIconTint">?android:textColorTertiaryInverse</item>
    </style>

    <style name="TaskListTagChip" parent="TagChip">
        <item name="chipMinHeight">14dp</item>
    </style>

    <style name="SpinnerItem" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
